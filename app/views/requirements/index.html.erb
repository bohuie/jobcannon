<h1> Add a Requirement</h1>

<%= simple_form_for @requirement, :url => { :action => "create" } do |f| %>

  <p> Fields marked with * are required </p>
  
  <div>
  <%= f.input :mandatory, collection: [['Mandatory', true], ['Optional',false]], :default => 1, label: "This requirement is... *"%>
  </div>  
  <div>
    <%= f.label "Description *" %>
    <%= f.text_area :description, :autofocus => true %>
  </div>

  <div>
  	<%= f.label "Degree" %>
    <%= f.text_area :degree, :autofocus => true %>
  </div>

  <div>
    <%= f.label "Education level" %>
    <%= f.text_area :educationLvl, :autofocus => true %>
  </div>

  <div>
    <%= f.label "Experience field" %>
    <%= f.text_area :exp_area, :autofocus => true %>
  </div>

  <div>
    <%= f.label "Years of Experience" %>
    <%= f.input :exp, :autofocus => true %>
  </div>

   <div>
    <%= f.hidden_field :posting_id, :value => @expID %>
  	<%= f.hidden_field :requirement_id, :value => 0 %>
  </div>


 <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

<% end %>