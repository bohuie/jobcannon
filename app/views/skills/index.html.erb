
<div class = "row">
  <div class = "col-lg-1">
  </div>

  <div class = "col-lg-6" style = "background-color: #E6E6E6; padding-bottom: 10px;" id = "all_skills">
      <% if !@skills.nil? %>
        <h1 style = "margin-bottom: 0px; font-size: 30px">All Skills</h1>
        <% @tracker = true %>
        <%= render partial: 'shared/skills', collection: @skills %>
      <% end %>
  </div>

  <div class = "col-lg-5">

    <% if @owner.to_i == @userID.to_i %>

      <h1 style = "margin-bottom: 0px; font-size: 30px">Add a Skill</h1>
      <div class = "row" height = 30px style = "padding-left: 1.5em;">
        <div class = "col-lg-1" style ="" ></div>
          <div class = "col-lg-11" style ="" >
            <%= simple_form_for @skill, :url => { :action => "create" } do |f| %>
              <div> 
                <%= f.autocomplete_field :label, autocomplete_skilllabel_label_skills_path, :default => @skill.label, :autofocus => true%>
              </div>
              <% if @user.employer? %>
                <div>
                  <%= f.hidden_field :posting_id, :value => @postID %>
                </div>
                <div>
                  <%= f.input :mandatory, collection: [['Mandatory', true], ['Optional',false]], :default => 1%>
                </div>
              <% end %>
              <%= f.submit "Submit",:label => "Submit", class: "btn btn-large btn-primary" %>
            <% end %>
            <br><br>
            
        </div>
      </div>
    <% else %>
        
    <% end %>
    
  </div>
</div>

