<h1> Edit this Posting</h1>

<%= simple_form_for @posting, :html => { :method => :put} do |f| %>

  <p> Fields marked with * are required </p>
  
  <div><%= f.label "Title *" %> 
  <%= f.text_field :title, :autofocus => true , :default => @posting.title %></div>

  <div>
  	<%= f.label "Description/Responsibilities *" %>
    <%= f.text_area :description, :autofocus => true, :default => @posting.description %>
  </div>

  <div>
    <%= f.input :salary, :autofocus => true, :default => @posting.salary %>
  </div>

   <div>
  	<%= f.hidden_field :posting_id, :value => @posting.posting_id %>
    
  </div>


 <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

<% end %>