<h1> Add a Posting</h1>

<%= simple_form_for @posting, :url => { :action => "create" } do |f| %>

  <p> Fields marked with * are required </p>
  
  <div><%= f.label "Title *" %> 
  E.g. "Programming with Java" <br />
  <%= f.text_field :title, :autofocus => true %></div>

  <div>
  	<%= f.label "Description/Responsibilities *" %>
    <%= f.text_area :description, :autofocus => true %>
  </div>

  <div>
    <%= f.input :salary, :autofocus => true %>
  </div>

   <div>
  	<%= f.hidden_field :posting_id, :value => 0 %>
    
  </div>


 <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

<% end %>

  <% if !@postings.nil? %>
    <h1>All Postings</h1>
    <%= render partial: 'shared/postings', collection: @postings %>
  <% end %>