<h1>Add a Link</h1>

<%= simple_form_for @link, :url => { :action => "create" } do |f| %>

  <p> Fields marked with * are required </p>
  
  <div><%= f.label "URL *" %> 
  <%= f.text_field :url, :autofocus => true %></div>


  <%= f.hidden_field :project_id, :value => @projID %>
  <%= f.hidden_field :link_id, :value => 0%>

  
 <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

<% end %>