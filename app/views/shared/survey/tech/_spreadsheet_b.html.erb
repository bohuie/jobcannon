						<%= f.radio_button :magnitude_other, 3, :default => @spreadsheet_fluentcy.magnitude_other %>				
					</td>
					<td>
						<%= f.radio_button :magnitude_other, 2, :default => @spreadsheet_fluentcy.magnitude_other %>				
					</td>
					<td>
						<%= f.radio_button :magnitude_other, 1, :default => @spreadsheet_fluentcy.magnitude_other %>				
					</td>
				</tr>		
			</table>

			<%= f.label @label3 %>
			<br>
			<%= f.text_field :other, style: "width: 50%" %>
			<br>

			<div class = "row">
				<div class = "col-lg-2">
					<%= link_to $previous, {:action => "back", :controller => "/surveys",  :div => "spreadsheet", :file => "shared/survey/tech/spreadsheet_a"}, :remote=>true, class: "btn btn-primary" %> 
				</div>				
				<div class="col-lg-2">
					<%= f.submit $submit, class: "btn btn-primary", onClick: "showSaved1();" %>
				</div>
				<div class = "col-lg-4" id = "saved4" style= "display: none">
					<div class = "alert alert-success" style = "width: 125px; padding: 6px; text-align: center; margin-bottom: 0px;">
						Changes Saved
					</div>
				</div>
			</div>									
