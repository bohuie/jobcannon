<head>
<script>	
    function showSaved1(){    	
      $("#saved4").fadeIn();
      setTimeout(function(){$("#saved4").fadeOut("slow")}, 1000);
    }
</script>
</head>
<% @label2 = "How fluent are you with each of the following spreadsheet programs? (How well would you
				be able to use each)" %>
<% @label3 = "If Other Please Specify" %>

<% @excel = "Excel (Microsoft)" %>
<% @numbers = "Numbers (Apple)" %>
<% @calc = "Calc (Apple)" %>
<% @spreadsheet_fluentcy = SpreadsheetFluentcy.find_by(:user_id=> @user.user_id) %>

<body>
	<%= simple_form_for @spreadsheet_fluentcy,remote: true do |f| %>
			<%= f.label @label2 %>
			<br>
			<br>

			<table id = "survey_format" >
				<tr>
					<th>
					</th>
					<th>
						<%= $header1 %>
					</th>
					<th>
						<%= $header2 %>
					</th>
					<th>
						<%= $header3 %>
					</th>
					<th>
						<%= $header4 %>
					</th>
					<th>
						<%= $header5 %>
					</th>
					<th>
						<%= $header6 %>
					</th>
				</tr>
				<tr>
					<td style="text-align: left">
						<%= @excel %>
					</td>
					<td>
						<%= f.radio_button :excel, 6, :default => @spreadsheet_fluentcy.excel %>				
					</td>
					<td>
						<%= f.radio_button :excel, 5, :default => @spreadsheet_fluentcy.excel %>				
					</td>
					<td>
						<%= f.radio_button :excel, 4, :default => @spreadsheet_fluentcy.excel %>				
					</td>
					<td>
						<%= f.radio_button :excel, 3, :default => @spreadsheet_fluentcy.excel %>				
					</td>
					<td>
						<%= f.radio_button :excel, 2, :default => @spreadsheet_fluentcy.excel %>				
					</td>
					<td>
						<%= f.radio_button :excel, 1, :default => @spreadsheet_fluentcy.excel %>				
					</td>
				</tr>
				<tr>
					<td style="text-align: left">
						<%= @numbers %>
					</td>
					<td>
						<%= f.radio_button :numbers, 6, :default => @spreadsheet_fluentcy.numbers %>				
					</td>
					<td>
						<%= f.radio_button :numbers, 5, :default => @spreadsheet_fluentcy.numbers %>				
					</td>
					<td>
						<%= f.radio_button :numbers, 4, :default => @spreadsheet_fluentcy.numbers %>				
					</td>
					<td>
						<%= f.radio_button :numbers, 3, :default => @spreadsheet_fluentcy.numbers %>				
					</td>
					<td>
						<%= f.radio_button :numbers, 2, :default => @spreadsheet_fluentcy.numbers %>				
					</td>
					<td>
						<%= f.radio_button :numbers, 1, :default => @spreadsheet_fluentcy.numbers %>				
					</td>
				</tr>
				<tr>
					<td style="text-align: left">
						<%= @calc %>
					</td>
					<td>
						<%= f.radio_button :calc, 6, :default => @spreadsheet_fluentcy.calc %>				
					</td>
					<td>
						<%= f.radio_button :calc, 5, :default => @spreadsheet_fluentcy.calc %>				
					</td>
					<td>
						<%= f.radio_button :calc, 4, :default => @spreadsheet_fluentcy.calc %>				
					</td>
					<td>
						<%= f.radio_button :calc, 3, :default => @spreadsheet_fluentcy.calc %>				
