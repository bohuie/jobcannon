				<td>
					<%= f.radio_button :magnitude_other, 1, :default => @word_fluent.magnitude_other  %>				
				</td>
			</tr>
		</table>
		
		<%= f.label $other_label %>
		<br>
		<%= f.text_field :other %>	
		<br>			
							
		<%=link_to "Previous", survey_path(@user,:type=> 3,:tech=>0, :word=>0), class: "btn btn-primary test" %>
