			<tr>
				<th>
				</th>
				<th>
					<%= $header1 %>
				</th>
				<th>
					<%= $header2 %>
				</th>
				<th>
					<%= $header3 %>
				</th>
				<th>
					<%= $header4 %>
				</th>
				<th>
					<%= $header5 %>
				</th>
				<th>
					<%= $header6 %>
				</th>
			</tr>
			<tr>
				<td style = "text-align: left">
					<%= @q1 %>
				</td>
				<td>
					<%= f.radio_button :word, 6, :default => @word_fluent.word  %>				
				</td>
				<td>
					<%= f.radio_button :word, 5, :default => @word_fluent.word  %>				
				</td>
				<td>
					<%= f.radio_button :word, 4, :default => @word_fluent.word  %>				
				</td>
				<td>
					<%= f.radio_button :word, 3, :default => @word_fluent.word  %>				
				</td>
				<td>
					<%= f.radio_button :word, 2, :default => @word_fluent.word  %>				
				</td>
				<td>
					<%= f.radio_button :word, 1, :default => @word_fluent.word  %>				
				</td>
			</tr>
			<tr>
				<td style = "text-align: left">
					<%= @q2 %>
				</td>
				<td>
					<%= f.radio_button :pages, 6, :default => @word_fluent.pages  %>				
				</td>
				<td>
					<%= f.radio_button :pages, 5, :default => @word_fluent.pages  %>				
				</td>
				<td>
					<%= f.radio_button :pages, 4, :default => @word_fluent.pages  %>				
				</td>
				<td>
					<%= f.radio_button :pages, 3, :default => @word_fluent.pages  %>				
