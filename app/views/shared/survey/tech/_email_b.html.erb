					<%= @impress %>
				</td>
				<td>
					<%= f.radio_button :impress, 6, :default => @email_fluentcy.impress %>				
				</td>
				<td>
					<%= f.radio_button :impress, 5, :default => @email_fluentcy.impress %>				
				</td>
				<td>
					<%= f.radio_button :impress, 4, :default => @email_fluentcy.impress %>				
