
<% @label = "How fluent are you with each of the following e-mail programs? (How well would you be able to use each)" %>

<% @outlook = "Outlook (Microsoft)" %>
<% @mail = "Mail (Apple)" %>
<% @impress = "Impress (OpenOffice)" %>
<% @email_fluentcy = EmailFluentcy.find_by(:user_id=> @user.user_id) %>

<body>
	<%= simple_form_for @email_fluentcy, remote: true do |f| %>

		<%= f.label @label %>
		<table id = "survey_format">
			<tr>
				<th>
				</th>
				<th>
					<%= $header1 %>
				</th>
				<th>
					<%= $header2 %>
				</th>
				<th>
					<%= $header3 %>
				</th>
				<th>
					<%= $header4 %>
				</th>
				<th>
					<%= $header5 %>
				</th>
				<th>
					<%= $header6 %>
				</th>
			</tr>
			<tr>
				<td style = "text-align: left">
					<%= @outlook %>
				</td>
				<td>
					<%= f.radio_button :outlook, 6, :default => @email_fluentcy.outlook %>				
				</td>
				<td>
					<%= f.radio_button :outlook, 5, :default => @email_fluentcy.outlook %>				
				</td>
				<td>
					<%= f.radio_button :outlook, 4, :default => @email_fluentcy.outlook %>				
				</td>
				<td>
					<%= f.radio_button :outlook, 3, :default => @email_fluentcy.outlook %>				
				</td>
				<td>
					<%= f.radio_button :outlook, 2, :default => @email_fluentcy.outlook %>				
				</td>
				<td>
					<%= f.radio_button :outlook, 1, :default => @email_fluentcy.outlook %>				
				</td>
			</tr>
			<tr>
				<td style = "text-align: left">
					<%= @mail %>
				</td>
				<td>
					<%= f.radio_button :mail, 6, :default => @email_fluentcy.mail %>				
				</td>
				<td>
					<%= f.radio_button :mail, 5, :default => @email_fluentcy.mail %>				
				</td>
				<td>
					<%= f.radio_button :mail, 4, :default => @email_fluentcy.mail %>				
				</td>
				<td>
					<%= f.radio_button :mail, 3, :default => @email_fluentcy.mail %>				
				</td>
				<td>
					<%= f.radio_button :mail, 2, :default => @email_fluentcy.mail %>				
				</td>
				<td>
					<%= f.radio_button :mail, 1, :default => @email_fluentcy.mail %>				
				</td>
			</tr>
			<tr>
				<td style = "text-align: left">
					<%= @impress %>
				</td>
				<td>
					<%= f.radio_button :impress, 6, :default => @email_fluentcy.impress %>				
				</td>
				<td>
					<%= f.radio_button :impress, 5, :default => @email_fluentcy.impress %>				
				</td>
				<td>
					<%= f.radio_button :impress, 4, :default => @email_fluentcy.impress %>				
				</td>
				<td>
					<%= f.radio_button :impress, 3, :default => @email_fluentcy.impress %>				
				</td>
				<td>
					<%= f.radio_button :impress, 2, :default => @email_fluentcy.impress %>				
				</td>
				<td>
					<%= f.radio_button :impress, 1, :default => @email_fluentcy.impress %>				
				</td>
			</tr>
			<tr>
				<td style = "text-align: left">
					<%= $other %>
				</td>
				<td>
					<%= f.radio_button :magnitude_other, 6, :default => @email_fluentcy.magnitude_other %>				
				</td>
				<td>
					<%= f.radio_button :magnitude_other, 5, :default => @email_fluentcy.magnitude_other %>				
				</td>
				<td>
					<%= f.radio_button :magnitude_other, 4, :default => @email_fluentcy.magnitude_other %>				
				</td>
				<td>
					<%= f.radio_button :magnitude_other, 3, :default => @email_fluentcy.magnitude_other %>				
				</td>
				<td>
					<%= f.radio_button :magnitude_other, 2, :default => @email_fluentcy.magnitude_other %>				
				</td>
				<td>
					<%= f.radio_button :magnitude_other, 1, :default => @email_fluentcy.magnitude_other %>				
				</td>
			</tr>
		</table>

		<%= f.label $other_label %>
		<br>
		<%= f.text_field :other %>
		<%= f.submit $submit, class: "btn btn-primary" %>
		<%=link_to "Previous", survey_path(@user,:type=> 3,:email=>0), class: "btn btn-primary test" %>
	<% end %>
</body>