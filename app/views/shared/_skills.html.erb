    <table>
      <tr>
        <td style = "max-width:12em"><p><%= skills.label %></p></td>
        <% if !skills.nil? %>
          <% if skills.user_id == @userID %>
            <td><%= link_to "Edit this Skill", edit_skill_path(skills.skill_id), class: "btn btn-small btn-info"%></td>
            <td><%= link_to "Delete this Skill", skills, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-small btn-danger" %></td>
            <% end %>
          <% end %>
      </tr>
    </table>
