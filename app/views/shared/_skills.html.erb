<head>

  <style = "text/css">
    .space{
      padding: 0.5em;
    }

  </style>
</head>
  <body>    
    <table border = "0">
      <tr>
        <td class = "space" style = "max-width:12em; width: 12em"><p><%= skills.label %></p></td>
        <% if !skills.nil? %>
          <% if skills.user_id == @userID %>
            <td class = "space">
              <div class = "hover">
                <%= link_to image_tag('edit.png'), edit_skill_path(skills.skill_id), class: "btn btn-small btn-info"%>
                <div class = "tooltip">
                  Click here to edit
                </div>
              </div>
            </td>
            <td class = "space">
              <div class = "hover">
                <%= link_to image_tag('delete.png'), skills, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-small btn-danger" %>
                <div class = "tooltip">
                  Click here to delete
                </div>
              </div>
            </td>            
          <% else %>
            <td>
              <% @endorsed = Endorse.find_by(skill_id: skills.skill_id, endorser_id: @userID) %>
              <% if @endorsed.nil? %>
                <% @endor = Endorse.new %>
                  <%= simple_form_for @endor do |f| %>

                    <%= f.hidden_field :skill_id , :value => skills.skill_id %>
                    <%= f.hidden_field :endorser_id, :value => @userID %>
                    <br>  
                    <%= f.submit "Endorse", class: "btn btn-primary"%>
                  <% end %>
              <% else %>
                <%= simple_form_for @endorsed do |f| %>                    

                    <% f.hidden_field :skill_id , :value => @endorsed.skill_id %>
                    <% f.hidden_field :endorser_id, :value => @endorsed.endorser_id %>
                    <br>  
                    <%= f.submit "Unendorse", class: "btn btn-primary"%>
                <% end %>
              <% end %>
            </td>
          <% end %>
          <td style = "padding-left: 15px;">
            <% @count = Endorse.where(skill_id: skills.skill_id).count %>
            <% if @count > 0 %>
              <p> This skill has been endorsed: <%= @count %> <p>
            <% end %>
          </td>
        <% end %>
      </tr>
    </table>
 </body>
