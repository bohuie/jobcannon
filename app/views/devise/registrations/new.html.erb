<h2>Sign up</h2>

<%= form_for(@user, :url => { :action => "create" }) do |f| %>
  <%= devise_error_messages! %>

<!--<div>
  <%= radio_button_tag(:status, {employee: true} ) %>
  <%= label_tag(:employee, "Looking for work") %>-->
  <div><%= check_box_tag employer: true %>
  <%= label_tag(:employer, "Looking to hire") %></div>
  

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label "First Name" %><br />
  <%= f.text_field :fname, :autofocus => true %></div>

  <div><%= f.label "Last Name" %><br />
  <%= f.text_field :lname, :autofocus => true %></div>



  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
