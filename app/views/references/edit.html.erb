<h1> Edit this Reference</h1>

<%= simple_form_for @reference, :html => { :method => :put} do |f| %>

  <p> Fields marked with * are required </p>
  
  <div><%= f.label "First Name *" %> 
  <%= f.text_field :fname, :autofocus => true, :default => @reference.fname %></div>

  <div>
    <%= f.label "Last Name *" %>
    <%= f.text_field :lname, :autofocus => true, :default => @reference.lname %>
  </div>

  <div>
    <%= f.label "Relationship *" %>
    <%= f.text_field :relationship, :autofocus => true, :default => @reference.relationship %>
  </div>

  <div>
    <%= f.label "Email" %>
    <%= f.email_field :email, :autofocus => true, :default => @reference.email %>
  </div>
  <div>
    <%= f.label "Phone Number" %>
    <%= f.text_field :phone_number, :autofocus => true, :default => @reference.phone_number %>
  </div>
  <div>
    <%= f.input :yrsknown, :label => "Years Known", :autofocus => true, :default => @reference.yrsknown %>
  </div>
  <div>
    <%= f.input :website, :label => "Website", :autofocus => true, :default => @reference.website %>
  </div>



 <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

<% end %>
