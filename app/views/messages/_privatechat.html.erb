<ul id="chatfield" style = "margin: 0px; padding: 0px;">
	<% if @messages.nil? %>
		<%	@messages = Message.where(sender_id: @other.id, receiver_id: @user.id)
	      @messages = @messages + (Message.where(sender_id: @user.id, receiver_id: @other.id))
	      @messages = @messages.sort_by { |obj| obj.sent_at } %>
	<% end %>
  	<%= render @messages %>
</ul>