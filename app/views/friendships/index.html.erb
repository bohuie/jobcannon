<h1> Your Network </h1>
<%= link_to "Explore your network", "/show_network" %>

	<% if user_signed_in? and !@requests.empty? %>
		<p> Friend request(s) pending: </p>
		<%= render partial: 'shared/friendrequests', collection: @requests %>
	<% end %>

	<h2>Currently Online </h2>

	<%= render partial: 'shared/onlinefriends', collection: @online %>
	<% if @online.empty? %>
		<p>No friends are currently online. </p>
	<%end%>
	<div class = "row">
		<div class = "col-md-6">
			<%= form_tag("/findfriend", method: "get") do %>
			    <div style = "max-width:500px;">
			    	<p>Find people via email address</p>
			    	<%= email_field_tag(:q)%> 
			    </div>
			    <%= submit_tag("Find Friend",class: "btn btn-small btn-primary") %> 
			<% end %>
		</div>
		<div class = "col-md-6">
			<%= form_tag("/findcompany", method: "get") do %>
			    <div style = "max-width:500px;">
			    	<p>Find a company</p>
			    	<%= text_field_tag(:q)%> 
			    </div>
			    <%= submit_tag("Find Company",class: "btn btn-small btn-primary") %> 
			<% end %>
		</div>
	</div>



	<h2>Companies </h2>

	<%= render partial: 'shared/companieslist', collection: @companies %>
	<% if @left>0 %>
		</div>
	<% end %>

	<% @left = 0 %>

	<h2>Friends </h2>

	<%= render partial: 'shared/friendslist', collection: @friends %>

	<% if @left>0%>
		</div>
	<% end %>
	
	<% if @friends.empty? %>
		<p>No friends yet. </p>
	<%end%>

	<div style = "height: 7em;">
	</div>