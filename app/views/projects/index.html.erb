<h1> Add a Project</h1>

<%= simple_form_for @project, :url => { :action => "create" } do |f| %>

  <p> Fields marked with * are required </p>
  
  <div><%= f.label "Title of Project *" %> 
  <%= f.text_field :name, :autofocus => true %></div>

  <div>
  	<%= f.label "Description *" %>
    <%= f.text_area :desc, :autofocus => true %>
  </div>

  <%= f.hidden_field :experience_id, :value => @expID %>
  <%= f.hidden_field :project_id, :value => 0%>

  
 <%= f.submit "Submit", class: "btn btn-large btn-primary" %>

<% end %>